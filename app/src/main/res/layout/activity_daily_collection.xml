<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity_DailyCollection"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/MaterialTheme.IntegSys"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_dailyCollection"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/MaterialTheme.IntegSys"
            app:popupTheme="@style/ToolbarPopUpTheme">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/CollectionCardViewBackgroungDark"
            app:cardElevation="1dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2"
                android:padding="7dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_weight="1.8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_collector"
                            android:padding="10dp"
                            tools:ignore="ContentDescription" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight=".2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_collectorName"
                            android:textColorHint="@color/colorAccent"
                            style="@style/TextInputLayout.Integsys"
                            android:layout_marginLeft="3dp"
                            android:layout_marginStart="3dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        tools:ignore="NestedWeights"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_weight="1.35"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_calendar"
                            android:padding="10dp"
                            tools:ignore="ContentDescription" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight=".825"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Date From"
                            android:textColorHint="@color/colorAccent"
                            style="@style/TextInputLayout.Integsys"
                            android:layout_marginLeft="3dp"
                            tools:ignore="HardcodedText"
                            android:layout_marginStart="3dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight=".825"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Date Thru"
                            android:textColorHint="@color/colorAccent"
                            style="@style/TextInputLayout.Integsys"
                            android:layout_marginLeft="3dp"
                            tools:ignore="HardcodedText"
                            android:layout_marginStart="3dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAccent"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:gravity="center_vertical"
                        tools:ignore="NestedWeights">

                        <ImageView
                            android:layout_weight="1.8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_city_hall"
                            android:padding="10dp"
                            tools:ignore="ContentDescription" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight=".2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="City"
                            android:textColorHint="@color/colorAccent"
                            style="@style/TextInputLayout.Integsys"
                            android:layout_marginLeft="3dp"
                            tools:ignore="HardcodedText"
                            android:layout_marginStart="3dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_weight="1.8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_streetview"
                            android:padding="10dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_weight=".2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Barangay"
                            android:textColorHint="@color/colorAccent"
                            style="@style/TextInputLayout.Integsys"
                            android:layout_marginLeft="3dp"
                            tools:ignore="HardcodedText"
                            android:layout_marginStart="3dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"/>

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight=".8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/CollectionCardViewBackgroungDark"
            app:cardElevation="1dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="7dp"
                tools:targetApi="o">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tablayout_collectionLevel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                app:tabIndicatorHeight="2dp"
                app:tabIndicator="@color/colorAccent"
                app:tabTextColor="@color/textColorPrimary"
                app:tabSelectedTextColor="@color/colorAccent"
                app:tabGravity="fill"/>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager_collectionView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>