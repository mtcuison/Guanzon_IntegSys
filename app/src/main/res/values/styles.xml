<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="dialogTheme">@style/AlertDialog.AppCompat.LightCustom</item>
        <item name="android:windowBackground">@color/windowBakcground</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
    </style>

    <style name="AlertDialog.AppCompat.LightCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>

    <style name="MaterialTheme.IntegSys" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/textColorPrimaryDark</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/textColorPrimaryDark</item>
        <item name="android:iconTint" tools:targetApi="o">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorPrimaryDark</item>
        <item name="android:popupElevation" tools:targetApi="lollipop">1dp</item>
    </style>

    <style name="TextInputLayout.Integsys" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="HintText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_regular</item>
    </style>

    <style name="CounterTextAppearrance">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/roboto_thin</item>
    </style>

    <style name="ToolbarPopUpTheme" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:contextPopupMenuStyle" tools:targetApi="n">@style/Widget.MaterialComponents.PopupMenu.ContextMenu</item>
        <item name="android:background" tools:targetApi="lollipop">#1B1B1B</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">#FFF</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>
